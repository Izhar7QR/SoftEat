<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Practica4" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- EditText -->
    <style name="EditText" parent="Widget.AppCompat.Button">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.App.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Navigation Drawer -->
    <style name="DrawerMenuItem">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Body" parent="Widget.AppCompat.Button">
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Button -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/lavanda</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingVertical">18dp</item>
        <item name="android:paddingHorizontal">50dp</item>
        <item name="android:textSize">24sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- TextView -->
    <style name="Title" parent="Widget.AppCompat.Button">
        <item name="android:textSize">48sp</item>
        <item name="android:fontFamily">@font/passion_one_bold</item>
        <item name="android:textColor">@color/dark_charcoal</item>
    </style>

    <style name="Text" parent="Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/dark_charcoal</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/passion_one_bold</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textSize">22sp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>